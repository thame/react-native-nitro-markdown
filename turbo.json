{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["ANDROID_HOME", "ANDROID_SDK_ROOT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "codegen": {
      "cache": false,
      "outputs": ["nitrogen/generated/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "prebuild": {
      "cache": false
    },
    "prebuild:clean": {
      "cache": false
    },
    "ios": {
      "cache": false
    },
    "android": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test:cpp": {
      "cache": false
    }
  }
}

